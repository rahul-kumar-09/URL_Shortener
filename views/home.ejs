<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortner</title>
</head>
<body>

    <% if (locals.id) { %>
     <p>URL http://localhost:8000/url <%= id %></p>
    <% } %>
    
    <form action="/url" method="post">
        <label for="">Past Your URL</label>
        <input type="text" placeholder="Enter your url" name="url">
        <button type="submit">Generate</button>
    </form>


    <div>
        <% if (locals.urls) { %>
         <table>
            <thead>
                <th>S.no</th>
                <th>SortID</th>
                <th>Redirect</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr>
                    <td><%= index + 1 %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.redirectURL %></td>
                    <td><%= url.visitHistory.length %></td>
                </tr>
                <% }) %>
            </tbody>
         </table>
        <% } %>
    </div>

</body>
</html>